<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/category_button_margin_vertical"
    android:paddingTop="@dimen/category_button_margin_vertical"
    android:background="@color/NavajoWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/UpperLayout"
        android:layout_weight="0.33">


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/SportsButton"
            android:layout_marginLeft="@dimen/category_button_margin_horizontal"
            android:layout_weight="0.5"
            android:background="@drawable/sports307"
            android:alpha="0.95"
            android:text="Sports"
            android:textSize="25dp"
            android:tag="@string/sports"
            android:textColor="@color/White"
            android:textStyle="bold"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/PoliticsButton"
            android:layout_marginRight="@dimen/category_button_margin_horizontal"
            android:layout_weight="0.5"
            android:alpha="0.85"
            android:background="@drawable/politics307"
            android:text="Politics"
            android:textSize="25dp"
            android:tag="@string/politics"
            android:textColor="@color/Black"
            android:textStyle="bold"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/MiddleLayout"
        android:layout_below="@+id/UpperLayout"
        android:layout_weight="0.33">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/TechButton"
            android:layout_marginLeft="@dimen/category_button_margin_horizontal"
            android:layout_weight="0.5"
            android:background="@drawable/tech307"
            android:alpha="0.9"
            android:text="Technology"
            android:textSize="22dp"
            android:tag="@string/tech"
            android:textColor="@color/White"
            android:textStyle="bold"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ScienceButton"
            android:layout_marginRight="@dimen/category_button_margin_horizontal"
            android:layout_weight="0.5"
            android:background="@drawable/science307"
            android:text="Science"
            android:textSize="22dp"
            android:tag="@string/science"
            android:textColor="@color/White"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_below="@+id/MiddleLayout"
        android:id="@+id/LowerLayout"
        android:layout_weight="0.33">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/EconomyButton"
            android:layout_marginLeft="@dimen/category_button_margin_horizontal"
            android:layout_weight="0.5"
            android:background="@drawable/economy3072"
            android:alpha="0.95"
            android:text="Economy"
            android:textSize="22dp"
            android:tag="@string/economy"
            android:textColor="@color/White"
            android:textStyle="bold"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/EntertainmentButton"
            android:layout_marginRight="@dimen/category_button_margin_horizontal"
            android:layout_weight="0.5"
            android:background="@drawable/entertainment3072"
            android:alpha="0.98"
            android:text="Entertainment"
            android:textSize="22dp"
            android:tag="@string/entertainment"
            android:textColor="@color/White"
            android:textStyle="bold"/>


    </LinearLayout>

</LinearLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>

